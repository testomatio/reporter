{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "target": "es2022",
  },
  "compileOnSave": true,
  "include": ["lib", "types.d.ts", "vitest-types.d.ts"],
  "exclude": ["typings/tests", "node_modules"]
}
