{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "types": [
        "node"
    ],
    "target": "ESNext",
  },
  "compileOnSave": true,
  "include": [
    "lib", "types.d.ts"  
  ],
  "exclude": [
    "typings/tests"
  ]
}