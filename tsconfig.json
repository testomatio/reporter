{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "module": "CommonJS", // esnext for esm
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./lib", // change for esm
  },
  "compileOnSave": true,
  "include": [
    "src/",
  ],
  "exclude": [
    "node_modules",
    "packages",
    "src/adapter/mocha.cjs",
    "src/adapter/mocha.cjs",
    "src/adapter/jasmine/jasmine.cjs",
    "src/reporter.cjs",
  ],
}